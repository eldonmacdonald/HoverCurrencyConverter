{
    "manifest_version": 3,
    "name": "INR Hover",
    "version": "1.0",
    "description": "Converts price to INR on hover",
    "content_scripts": [
        {
            "matches": ["*://*/*", "file:///*"],
            "js": [
                "scripts/Observable.js",
                "scripts/utils.js",
                "scripts/CurrencyConverter.js",
                "scripts/CurrencySymbolFinder.js",
                "scripts/CurrencyContext.js",
                "scripts/PriceFrame.js",
                "scripts/PageManager.js",
                "scripts/PriceElement.js",
                "scripts/PriceElementBuilder.js",
                "main.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*",
        "file:///*"
    ],
    "web_accessible_resources": [{
        "resources": ["resources/frame.html"],
        "matches": ["*://*/*", "file:///*"]
    }]
}